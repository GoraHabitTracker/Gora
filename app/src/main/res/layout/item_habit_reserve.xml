<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_habit"
    style="@style/ListCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/image_girl_runs_png" />

        <TextView
            android:id="@+id/tv_name_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/sapphire"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/frame_with_button"
            app:layout_constraintStart_toEndOf="@+id/image_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Название привычки" />

        <ImageView
            android:id="@+id/icon_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_question_periwinkle" />

        <FrameLayout
            android:id="@+id/frame_with_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_habit">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/frame_choice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_skip"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_button_skip"
                    android:drawableStart="@drawable/icon_x_periwinkle"
                    android:gravity="center"
                    android:padding="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:stateListAnimator="@null"
                    android:text="@string/skip"
                    android:textAllCaps="false"
                    android:textColor="@color/sapphire"
                    android:textSize="12sp"
                    tools:text="@string/skip" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_done"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_button_done"
                    android:drawableStart="@drawable/icon_check_white"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:stateListAnimator="@null"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textColor="@color/sapphire"
                    android:textSize="12sp"
                    tools:text="@string/done" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/frame_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_done_clicked"
                android:drawableStart="@drawable/icon_check_white"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="100dp"
                android:stateListAnimator="@null"
                android:text="@string/done_cancel"
                android:textAllCaps="false"
                android:textColor="@color/sapphire"
                android:textSize="12sp"
                android:visibility="gone"
                tools:background="@color/pastel_green" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/frame_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_skip_clicked"
                android:drawableStart="@drawable/icon_x_blue_fcbk"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="100dp"
                android:stateListAnimator="@null"
                android:text="@string/skip_cancel"
                android:textAllCaps="false"
                android:textColor="@color/sapphire"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/frame_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_inactive_habit"
                android:drawablePadding="16dp"
                android:paddingVertical="16dp"
                android:paddingStart="18dp"
                android:paddingEnd="52dp"
                android:stateListAnimator="@null"
                android:text="@string/habit_inactive"
                android:textColor="@color/sapphire"
                android:textSize="12sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/icon_peace__hand" />

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

    <!-- android:stateListAnimator="@null"  - Убирает тени-->