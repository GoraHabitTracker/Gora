<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sea_foam"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal_main"
            android:layout_marginTop="46dp"
            android:background="@color/sea_foam"
            android:fontFamily="@font/manrope_extrabold"
            android:text="@string/calendar"
            android:textColor="@color/sapphire"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/todays_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal_main"
            android:layout_marginVertical="16dp"
            android:text=""
            android:textColor="@color/sapphire"
            android:textSize="17sp"
            tools:text="Понедельник, 1 февраля 2023" />

        <LinearLayout
            style="@style/CalendarViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/shadow_of_icon"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="@color/sapphire"
                android:textSize="14sp"
                tools:text="Месяц" />

            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cv_dayViewResource="@layout/calendar_day_layout"
                app:cv_monthHeaderResource="@layout/calendar_day_legend_container" />
        </LinearLayout>

        <LinearLayout
            style="@style/CalendarViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_main"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/shadow_of_icon"
            android:padding="18dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/habits_done"
                android:textColor="@color/sapphire"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/icon_check_green" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/habits_not_done"
                android:textColor="@color/sapphire"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/icon_x_pastel_red" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

