    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/container_title"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/support_symbols"
            android:hint="name of the habit"
            android:text="" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:columnCount="5"
            android:orientation="horizontal"
            android:rowCount="2">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_1"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_2"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_3"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_4"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_5"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_6"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_7"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_8"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_9"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emoji_10"
                android:layout_width="@dimen/emoji_choice"
                android:layout_height="@dimen/emoji_choice"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@drawable/are_you_ready"
                app:shapeAppearanceOverlay="@style/roundedEmoji" />
        </GridLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="date"
        android:text=""
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SAVE" />

</LinearLayout>